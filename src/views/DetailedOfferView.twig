{% extends "layouts/master.twig" %}
{% block content %}
<div class='detailed_offer'>  
    <div class='detailed_offer_top'>  
        <img src='{{ siteUrl('assets/img/offers/' ~ offer.image  )}}'>
        <div class='wrap'>
            <div class='detailed_offer_top_infos'>
                <div class='titles'>
                    <p class='bold'>{{ offer.title }}</p>
                    <p>{{ offer.category.title }}</p>
                </div>
                <p class='price'>{{ offer.price }} €</p>
            </div>
            {% if user_id %}
                {% if unpaidBoxes is empty %}
                    <div class='buttonLayout'>
                        <a class='button button--green' href='{{ url }}' >Créer un coffret</a>
                    </div>
                {% else %}
                    <form method='POST' class='detailed_offer_top_add'>  
                        <p>Ajouter à la box </p>
                        <select name='box_id'>
                            {% for box in unpaidBoxes %}
                                    <option value='{{ box.id }}'>{{ box.title }}</option>
                            {% endfor %}
                        </select>
                        <button class='button button--green' type='submit'>Valider</button>
                    </form>
                {% endif %}
            {% else %}
            <div class='buttonLayout buttonLayout--right'>
                <a class='button button--green' href='{{ urls.login }}' >Connectez vous pour commencez!</a>
            </div>
            {% endif %}
            <div class='detailed_offer_description'> 
                {{ offer.description }}
            </div>
        </div>
    </div>
</div> 


{% endblock %}